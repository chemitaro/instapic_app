<h1>新規投稿</h1>
<% if @picture.errors.any? %>
  <div id = "error_explanation">
    <h2><%= pluralize(@picture.errors.count,"error") %> prohibited this <%= @picture %> from being saved:</h2>
    <ul>
    <% @picture.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>
<%= form_with( model: @picture, local: true, url: confirm_pictures_path ) do |f| %>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label :content %>
    <%= f.text_field :content %>
  </div>
  <div>
    <%= f.label :content_picture %>
    <%= f.file_field :content_picture %>
    <%= f.hidden_field :content_picthre_cache %>
  </div>
  <%= f.submit "投稿" %>

<% end %>